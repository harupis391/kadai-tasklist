<% if logged_in? %>
  <h1 class="text-info">タスク一覧</h1>
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>ステータス</th>
          <th>メッセージ</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
  <% end %>
  
  <%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
<% else %>
  <div class="center jumbotron bg-light">
    <div class="text-center">
      <h1 class="text-warning">Tasklister へようこそ！</h1>
      <%= link_to '新規で登録する', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>